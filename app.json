{
  "expo": {
    "name": "Just Cook Bro",
    "slug": "just-cook-bro",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.justcookbro.app",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to scan recipes from photos.",
        "NSMicrophoneUsageDescription": "This app uses the microphone for cooking voice commands.",
        "NSPhotoLibraryUsageDescription": "This app accesses your photos to let you pick recipe images."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.justcookbro.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "extra": {
      "eas": {
        "projectId": "https://expo.dev/accounts/yoro_kororo/projects/just-cook-bro"
      }
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you scan recipes.",
          "cameraPermission": "The app accesses your camera to let you scan recipes."
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "The app accesses your microphone for voice commands during cooking."
        }
      ]
    ]
  }
}